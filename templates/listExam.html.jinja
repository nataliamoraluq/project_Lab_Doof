{% extends 'base.html.jinja' %}
{% block contentBase %}
    <div id="infoExam">
        <h1> {% block title %} Exam & Service: {% endblock %}</h1>
        <a href="{{url_for('addExam')}}"> Add an exam </a>
        <h3> Exams List: </h3>
    </div>
    <div id="examListCont">
        <ul>
            {% for e in examenes %}
                <li>
                    <p>{{e.codeExam}}</p>
                    <p>{{e.name}}</p>
                    <p>{{e.typeOfSample}}</p>
                    <p>{{e.price}}</p>
                    <a href="/updateS/{{e._id}}">Update</a>
                    <a href="/deleteS/{{e._id}}">Delete</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}