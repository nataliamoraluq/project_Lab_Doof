{% extends 'base.html.jinja' %}
{% block contentBase %}
    <div id="infoCateg">
        <h1> {% block title %} Category: {% endblock %}</h1>
        <a href="{{url_for('addCategory')}}"> Add a category </a>
        <h3> Categories List: </h3>
    </div>
    <div id="categListCont">
        <ul>
            {% for c in categorias %}
                <li>
                    <p>{{c.name}}</p> 
                    <p>{{c.description}} </p>
                    <a href="/updatedC/{{c._id}}">Update</a>
                    <a href="/deleteC/{{c._id}}">Delete</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}