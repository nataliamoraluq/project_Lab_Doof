{%extends 'base.html.jinja'%}
{%block contentBase%}
   <h1>{% block title %} Exams & Services Catalogue: {% endblock %}</h1>
   <div id="filterOptions">
      <h4> Filter By: </h4>
      <label> Category:</label>
      <select name="categoryFilter">
         {% for c in categorias %}
            <option value="{{c.name}}"> {{c.name}}</option>
         {%endfor%}
      </select>
      <label> Sample type:</label>
      <input type="string" name="sampleFilter" placeholder="Sample type">
      <input id="btnFilter" type="submit" value="Filter">
   </div>
   <table style="width:100%">
      <tr>
         <th>Exam Code</th>
         <th>Exam Name</th>
         <th>Sample type</th>
         <th>Price (Bs)</th>
         <th>Consult here</th>
      </tr>
      {%for filtered in exams%}
         <tr name="row1">
            <td>{{filtered.codeExam}}</td>
            <td>{{filtered.name}}</td>
            <td>{{filtered.typeOfSample}}</td>
            <td>{{filtered.price}}</td>
            <td>
               <a href="/updateS/{{filtered._id}}">Update</a>
               <a href="/deleteS/{{filtered._id}}">Delete</a>
            </td>
         </tr>
      {%endfor%}
   </table>
{%endblock%}